<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{{ title }} | Alex Jegtnes</title>

  {{>head}}
</head>
<body class="w-100">
  {{>header}}

  <div class="pa3 mw7 center">
    <main>
      {{{ contents }}}

        {{#each collections.portfolio}}
          <section class="m0 mb4">
            <header class="item-header bdb pb3 mb3">
              <h2 class="f3 f2-m f1-l ttu bdt mb0 pt3">
                <a class="link" href=/{{this.path}}>{{{this.title}}}</a>
              </h2>
            </header>
            <p class="ma0 f4 f3-ns">
              {{{ excerpt this.excerpt this.contents 200 }}}
            </p>
          </section>
        {{/each}}
    </main>
  </div>

  {{>footer}}
  {{>foot}}
</body>
</html>
