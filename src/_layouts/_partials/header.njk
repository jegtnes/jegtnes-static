{% set anchorClass %}main-nav__link {% activeSection item.url, page.url %}{% endset %}

<header class="site-header">
  <nav class="container">
    <ul class="main-nav">
      {% for item in nav.items %}
        {% if item.url == "/" %}
          <li class="main-nav__item hcard">
        {% else %}
          <li class="main-nav__item">
        {% endif %}
          <a
            href="{{item.url}}"
            class="main-nav__link {% activeSection item.url, page.url %}"
            {% ariaCurrent item.url, page.url %}
          >
            {{item.label}}
          </a>
        </li>
      {% endfor %}
    </ul>
  </nav>
</header>