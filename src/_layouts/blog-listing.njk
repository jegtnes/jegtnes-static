---
layout: global.njk
---

<section>
  <h1>{{ title }}</h1>
  <ol>
    {% for post in collections.post | reverse %}
      <li>
        <a href={{post.data.href}}>
          <h2>{{post.data.title}}</h2>
          <!-- todo datetime attr -->
          <time>{{post.data.date | humanPostDate}}</time>
          <p>{{post.data.excerpt}}</p>
        </a>
      </li>
    {% endfor %}
  </ol>
</section>
