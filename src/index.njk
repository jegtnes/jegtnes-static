---

<section class="flow flow--spacious h-feed">
  <h2>Latest blog posts</h2>
  {% set newestPosts = collections.post | reverse %}
  {% for post in newestPosts.slice(0,2) %}
    <article class="h-entry">
      <a class="u-url" href="{{post.data.page.url}}">
        <h3 class="p-name">{{post.data.title}}</h3>
      </a>
      <time class="dt-published spacing-block-end" datetime="{{post.data.date | isoPostDate}}">
        {{post.data.date | humanPostDate}}
      </time>
      <p>{{post.data.excerpt}}</p>
    </article>
  {% endfor %}

  <p><a href="/blog">View older blog posts</a></p>
</section>
